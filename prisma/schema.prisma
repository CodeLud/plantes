generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Plante {
  id              String             @id @default(cuid())
  nom             String
  espece          String?
  famille         String?
  mois_plantation String?
  mois_semis      String?
  ensoleillement  String?
  notes           String?
  imageUrl        String?
  multiplications M_multiplication[] @relation("M_multiplicationToPlante")
}

model M_multiplication {
  id          String   @id @default(cuid())
  methode     String?
  saison      String?
  observation String?
  plantes     Plante[] @relation("M_multiplicationToPlante")
}
